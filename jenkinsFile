pipeline{
    agent{label 'master'}
    tools{maven 'M3.8.4'}
    stages{
        stage('Git-Checkout'){
            steps{
                git branch: 'master', url: 'https://github.com/everardofq/jenkins-project.git'    
            }
        }
        stage('Compile'){
            steps{
                bat 'mvn compile'
            }
        }
        stage('Test'){
            steps{
                bat 'mvn test'
            }
        }
        stage('Package'){
            steps{
                bat 'mvn package'
            }
        }
        stage('Deploy-to-CloudHub'){
            steps{
                bat 'mvn clean install deploy -DmuleDeploy -DskipTests'
            }
        }
    }
}
